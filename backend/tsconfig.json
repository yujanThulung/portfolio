{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",       // where your TypeScript source files are
    "outDir": "./dist",       // where compiled JS will be emitted

    /* === Environment === */
    "target": "ES2020",       // or ESNext if you want modern syntax
    "module": "CommonJS",     // works best with Node.js (or "NodeNext" if using ESM)
    "lib": ["ESNext"],        // include latest JS features
    "types": ["node"],        // add Node.js type definitions

    /* === Type Checking === */
    "strict": true,           // enable all strict type-checking options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Module Resolution === */
    "esModuleInterop": true,  // allows default imports from CommonJS modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* === Output Options === */
    "sourceMap": true,        // useful for debugging
    "declaration": true,      // generate .d.ts type files
    "declarationMap": true,
    "skipLibCheck": true,

    /* === Experimental / Optional === */
    "isolatedModules": true
  },
  "include": ["src"],         // compile everything inside src/
  "exclude": ["node_modules", "dist"]
}
